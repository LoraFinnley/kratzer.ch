<%- include('partials/header.ejs') %>
<!-- title section start -->
<div class="title_section layout_padding">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 text-center">
        <div class="title_img mx-auto">
          <img src="/images/home/galloway.png" alt="Galloway" />
        </div>
      </div>
      <div class="col-md-6 text-center">
        <h1 class="title_text">Kratzers Gallowayhof</h1>
      </div>
    </div>
  </div>
</div>
<!-- title section end -->

<!-- product carousel start-->
<div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <!-- Carousel Item 1 -->
    <div class="carousel-item active">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <img
              src="https://via.placeholder.com/300"
              class="card-img-top"
              alt="Fleischpaket 10KG"
            />
            <div class="card-body">
              <h5 class="card-title">FLEISCHPAKET 10KG</h5>
              <p class="card-text">
                Mischpakete Herbst - ausverkauft Mischpakete Frühling - noch
                verfügbare Mischpakete!
              </p>
              <p class="card-text"><strong>CHF 320.00</strong></p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <img
              src="https://via.placeholder.com/300"
              class="card-img-top"
              alt="Fleischpaket 5KG"
            />
            <div class="card-body">
              <h5 class="card-title">FLEISCHPAKET 5KG</h5>
              <p class="card-text">
                Mischpakete Herbst - ausverkauft Mischpakete Frühling - noch
                verfügbare Mischpakete!
              </p>
              <p class="card-text"><strong>CHF 170.00</strong></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel Item 2 -->
    <div class="carousel-item">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <img
              src="https://via.placeholder.com/300"
              class="card-img-top"
              alt="Trockenwurst"
            />
            <div class="card-body">
              <h5 class="card-title">TROCKENWURST</h5>
              <p class="card-text">Normal oder mit Knoblauch. Preis pro 100g</p>
              <p class="card-text"><strong>CHF 4.50</strong></p>
            </div>
          </div>
        </div>
        <!-- Hier kannst du weitere Elemente hinzufügen -->
      </div>
    </div>
  </div>

  <!-- Carousel Controls -->
  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#productCarousel"
    data-bs-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#productCarousel"
    data-bs-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<!-- product carousel end -->

<%- include('partials/footer.ejs') %>
